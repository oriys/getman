{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Getman",
  "version": "0.1.0",
  "identifier": "com.getman.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev --port 1420",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Getman",
        "width": 1440,
        "height": 900,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/icon.png"
    ]
  }
}
